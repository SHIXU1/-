page {
  width: 100%;
  height: 100%;
}

.web {
  width: 100%;
  height: 100%;
}

.box {
  width: 100%;
  height: 100%;
  position: relative;
}

.box>image {
  width: 100%;
  height: 100%;
}

.p {
  position: absolute;
  top: 50%;
  left: 30%;
  background: linear-gradient(to right, #702eff, #bd2eff);
  -webkit-background-clip: text;
  color: transparent;
}
